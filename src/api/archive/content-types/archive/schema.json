{
  "kind": "collectionType",
  "collectionName": "archives",
  "info": {
    "singularName": "archive",
    "pluralName": "archives",
    "displayName": "아카이브"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "startDate": {
      "type": "date"
    },
    "endDate": {
      "type": "date"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "solo",
        "course",
        "group",
        "special"
      ]
    },
    "thumbnail": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "content": {
      "type": "component",
      "repeatable": true,
      "component": "entry.unit",
      "required": true
    }
  }
}
